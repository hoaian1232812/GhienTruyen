<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.FullFragmemtHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Truyện Full - Hoàn Thành"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
            <TextView
                android:id="@+id/full_new_update"
                android:layout_width="0dp"
                android:text="Full - Mới Cập Nhật"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/background_rec"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
            </TextView>
            <TextView
                android:id="@+id/full_good_review"
                android:layout_width="0dp"
                android:text="Full - Đánh Giá Cao"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/background_rec"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
            </TextView>
            <TextView
                android:id="@+id/full_like"
                android:layout_width="0dp"
                android:text="Full - Yêu Thích"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/background_rec"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
            </TextView>
            <TextView
                android:id="@+id/full_most_view"
                android:layout_width="0dp"
                android:text="Full - Xem Nhiều"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/background_rec"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
            </TextView>



        </GridLayout>
    </LinearLayout>

</FrameLayout>