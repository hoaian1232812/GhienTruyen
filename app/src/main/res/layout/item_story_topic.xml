<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="25dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_story_topic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/title_story_topic"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/quick_sand"
            android:maxLines="1"
            android:textColor="#4295D5"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_story_topic"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/quick_sand" />

            <TextView
                android:id="@+id/author_story_topic"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quick_sand" />
        </LinearLayout>

        <TextView
            android:id="@+id/chapter_story_topic"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quick_sand" />

        <TextView
            android:id="@+id/list_type_story_topic"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quick_sand" />
    </LinearLayout>

</LinearLayout>